<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ChatActivity">

    <ListView
        android:id="@+id/listViewChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtChatContent">

    </ListView>

    <EditText
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:maxLines="3"
        android:id="@+id/txtChatContent"
        app:layout_constraintTop_toBottomOf="@id/listViewChat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnSendMessage"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:background="@color/colorCardActivity" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="SEND"
        android:id="@+id/btnSendMessage"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/listViewChat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txtChatContent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary" />
</android.support.constraint.ConstraintLayout>